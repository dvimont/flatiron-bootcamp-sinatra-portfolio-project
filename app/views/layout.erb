<!DOCTYPE html>
<html>
  <style>
    body {background-color: aquamarine;}
    h1 { display:inline-block; text-align: center; background-color: white; }
    .centered { margin: auto; width: 50%; text-align: center; }
    .announce { text-align: center; border-style: dashed; border-width: 3px; border-color: red;}

    button.accordion { background-color: #eee; color: #444; cursor: pointer; padding: 18px; width: 100%;
        border: none; text-align: center; outline: none; font-size: 24px; transition: 0.4s; }
    button.accordion.active, button.accordion:hover { background-color: #ddd; }
    div.panel { padding: 0 18px; background-color: white; max-height: 0; overflow: hidden;
        transition: max-height 0.2s ease-out; }
    button.accordion2 { background-color: #eee; color: #444; cursor: pointer; padding: 14px; width: 90%;
        border: none; text-align: left; outline: none; font-size: 14px; transition: 0.4s; }
    button.accordion2.active, button.accordion2:hover { background-color: #ddd; }
    div.panel2 { padding: 0 24px; background-color: white; max-height: 0; overflow: hidden;
        transition: max-height 0.2s ease-out; }
    button.accordion3 { background-color: #eee; color: #444; cursor: pointer; padding: 10px; width: 80%;
        border: none; text-align: left; outline: none; font-size: 12px; transition: 0.4s; }
    button.accordion3.active, button.accordion3:hover { background-color: #ddd; }
    div.panel3 { padding: 0 30px; background-color: white; max-height: 0; overflow: hidden;
        transition: max-height 0.2s ease-out; }
   </style>
  <head>
    <title>Librivox Explorer</title>
  </head>
  <body>
    <header>
      <div class='centered'>
        <h1>CommonVox presents: LIBRIVOX EXPLORER</h1>
      </div>
    </header>
    <%= yield %>
    <script>
      toggleAccordion(document.getElementsByClassName("accordion"));
      toggleAccordion(document.getElementsByClassName("accordion2"));
      toggleAccordion(document.getElementsByClassName("accordion3"));

      function toggleAccordion(acc) {
        var i;
        for (i = 0; i < acc.length; i++) {
          acc[i].onclick = function() {
            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            if (panel.style.maxHeight){
              panel.style.maxHeight = null;
            } else {
              panel.style.maxHeight = "none";
            }
          }
        }
      }
    </script>
    <footer>
      <p>Footer content here!</p>
    </footer>
  </body>
</html>
